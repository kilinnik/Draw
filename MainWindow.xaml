<Window x:Class="лр1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:лр1"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000">
    <WrapPanel>
        <Canvas Background="White" MouseLeftButtonDown="MyCanvas_MouseLeftButtonUp" Height="580" Width="850" x:Name="myCanvas">
        </Canvas>
        <StackPanel>
            <ComboBox Name="myCombox" Text="Выбор" IsDropDownOpen="True" Width="120" Height="30">
                <TextBlock Text="Прямая"></TextBlock>
                <TextBlock Text="Окружность"></TextBlock>
                <TextBlock Text="Эллипс"></TextBlock>
            </ComboBox>
        </StackPanel>
    </WrapPanel>
</Window>
